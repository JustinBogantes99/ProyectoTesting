<section id="hero">
    <div class="hero-container my-auto">
        <div class="card my-auto wow fadeInUp">
            <article class="card-body">
                <h4 class="card-title text-center mb-4 mt-1">Registro de Entidades/Departamentos</h4>
                <hr>
                <p class="text-left mb-1">Registro de Entidades</p>
                <form action="/registro_entidad" method="POST">
                    <div class="form-group">
                        <div class="input-group">
                            <input name="nombreEntidad" class="form-control" placeholder="Nombre de la entidad"
                                type="text" required/>
                            <div class="input-group-prepend">
                                <button type="submit" class="btn btn-outline-success btn-block"> Registrar </button>
                            </div>
                        </div>
                    </div>
                </form>
                <p class="text-left mb-1">Registro de Departamentos</p>
                <form action="/registro_departamento" method="POST">
                    <div class="form-group">
                        <div class="input-group mb-2">

                            <div class="input-group-prepend">
                                <button class="btn dropdown-toggle btn-filtro" type="button" data-toggle="dropdown"
                                    aria-haspopup="true" aria-expanded="false">Entidad</button>
                                <div class="dropdown-menu" style="width: 250px;">
                                    <div class="px-1 pt-1">
                                        <div class="form-group">
                                            <label class="mb-0" for="buscar_NombreEntidad">Nombre:</label>
                                            <input type="text" class="form-control" name="buscar_NombreEntidad"
                                                id="buscar_NombreEntidad" placeholder="Nombre de la entidad"
                                                value="">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="mb-0" for="seleccionar_Entidad">Sugerencias:</label>
                                        <select multiple class="form-control scrollbar2" id="seleccionar_Entidad">
                                            <option value="" title="No se han encontrado sugerencias">No se han
                                                encontrado sugerencias</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <input name="entidad" id="entidad" class="form-control" placeholder="Seleccione una entidad" type="text"
                                readonly />
                            <input type="hidden" name="idEntidad" id="idEntidad" type="text">
                        </div>
                        <div class="input-group mb-2">
                            <input name="nombreDepartamento" class="form-control" placeholder="Nombre del departamento"
                                type="text" required/>
                            <div class="input-group-prepend">
                                <button type="submit" class="btn btn-outline-success btn-block"> Registrar </button>
                            </div>
                        </div>
                    </div>
                </form>
            </article>
        </div>
    </div>
</section>