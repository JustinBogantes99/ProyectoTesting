{{#if success_msg}} <!-- Se trata de una variable no un arreglo, entonces no hay que recorrerlo -->
<div class="modal fade" id="show_errors" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle"
     aria-hidden="true">
     <div class="modal-dialog" role="document">
          <div class="modal-content">
               <div class="modal-header">
                    <h5 class="modal-title text-center" id="exampleModalLongTitle">RequesTec</h5>
                    <button type="button" class="close btn btn-success" data-dismiss="modal" aria-label="Close">
                         <span aria-hidden="true">&times;</span>
                    </button>
               </div>
               <div class="modal-body text-center">
                   {{success_msg}}
               </div>
               <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal">Cerrar</button>
               </div>
          </div>
     </div>
</div>
{{/if}}

