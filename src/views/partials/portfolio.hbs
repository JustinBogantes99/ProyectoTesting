<section id="portfolio">
    <div class="container wow fadeInUp">
        <div class="section-header">
            <h3 class="section-title">Períodos de Matrícula</h3>
            <p class="section-description">A continuación se muestran los períodos de matrícula disponibles:</p>
        </div>

        {{#if_equal user.tipo_usuario "3"}}
        <div class="row mb-3">
            <div class="col-lg-12">
                <div class="text-center">
                    <a class="btn btn-outline-danger" href="/manage_inscription">Administrar Períodos</a>
                </div>
            </div>
        </div>
        {{/if_equal}}

        {{#if terms}}
        <div class="row mx-auto" id="portfolio-wrapper">
            {{#each terms }}
            <div class="col-lg-3 col-md-6 portfolio-item filter-app">
                <a href="/term/{{id}}"> <!-- Aqui va el id-->
                    <img src="img/imagen_proyecto.jpg">
                    <div class="details">
                        <h4>{{nombre}}</h4>
                        <span>{{descripcion}}</span>
                    </div>
                </a>
            </div>
            {{/each}}

        </div>
        {{/if}}
    </div>
</section>